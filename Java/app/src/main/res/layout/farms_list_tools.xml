<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <TableRow
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout1">

        <TextView
            android:id="@+id/txtfarmNameval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"

            android:fontFamily="sans-serif"
            android:inputType="text"
            android:text="Farm"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

    </TableRow>

     <TableRow
         android:id="@+id/tableLayout21"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_marginStart="5dp"
         android:layout_marginTop="3dp"
         android:layout_marginEnd="2dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

         <TextView
             android:id="@+id/txtlocationval"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignStart="@+id/txtfarmName"
             android:layout_alignLeft="@+id/txtdetails"
             android:layout_marginStart="2dp"
             android:fontFamily="sans-serif"
             android:inputType="text"
             android:text="Location"
             android:textAlignment="viewStart"
             android:textColor="@android:color/black"
             android:textSize="20sp" />
